{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "DATS descriptive statistics schema",
    "description": "an annotation to provide key information about central tendency and variability about a dats.dimension",
    "type": "object",
    "properties": {
        "@context": {"anyOf": [
            {"type": "string"},
            {"type": "object"}
        ]},
        "@type": {
            "type": "string",
            "enum": ["Statistics"]
        },
        "stats": {
            "type": "array",
            "items": {
                "$ref" : "stats_schema.json#"
          }
        }
    },
    "additionalProperties": false
}